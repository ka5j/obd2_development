{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PIO: Build (firmware)",
            "type": "shell",
            "command": "pio run",
            "options": {
                "cwd": "${workspaceFolder}/firmware"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$platformio"
            ]
        },
        {
            "label": "PIO: Upload (firmware)",
            "type": "shell",
            "command": "pio run -t upload",
            "options": {
                "cwd": "${workspaceFolder}/firmware"
            },
            "problemMatcher": [
                "$platformio"
            ]
        },
        {
            "label": "PIO: Monitor (firmware)",
            "type": "shell",
            "command": "pio device monitor --baud 115200",
            "options": {
                "cwd": "${workspaceFolder}/firmware"
            }
        },
        {
            "label": "Bridge: Serial logger",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python bridge/serial_logger.py",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}