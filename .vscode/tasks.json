{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PIO: Build (firmware)",
            "type": "shell",
            "command": "pio run",
            "options": {
                "cwd": "${workspaceFolder:firmware}"
            },
            "group": "build"
        },
        {
            "label": "PIO: Upload (firmware)",
            "type": "shell",
            "command": "pio run -t upload",
            "options": {
                "cwd": "${workspaceFolder:firmware}"
            },
            "problemMatcher": []
        },
        {
            "label": "PIO: Monitor (firmware)",
            "type": "shell",
            "command": "pio device monitor --baud 115200",
            "options": {
                "cwd": "${workspaceFolder:firmware}"
            },
            "problemMatcher": []
        },
        {
            "label": "PIO: Clean (firmware)",
            "type": "shell",
            "command": "pio run -t clean",
            "options": {
                "cwd": "${workspaceFolder:firmware}"
            },
            "problemMatcher": []
        },
        {
            "label": "Pi: Logger (CSV)",
            "type": "process",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "bridge/serial_logger.py",
                "--port",
                "auto",
                "--baud",
                "115200",
                "--out",
                "logs/telemetry.csv",
                "--print"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Pi: Compute (rate/jitter/drops)",
            "type": "process",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "bridge/compute_demo.py"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}